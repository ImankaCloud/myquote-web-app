<h3 style="padding-top: 10px;">Search for quotes by keyword</h3>
<%= form_tag search_path, method: :get do %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :keyword_query, params[:keyword_query], placeholder: 'Enter a keyword', class: "form-control" %>
  </div>
  <%= submit_tag 'Search Quotes', class: "btn btn-primary" %>
<% end %>

<% if params[:keyword_query].present? %>
  <% if @quotes.present? %>
    <h4 style="padding-top: 15px;">Results:</h4>
    <% @quotes.each do |quote| %>
      <div class="card bg-body-tertiary" style="margin-bottom:10px">
        <div class="card-body">
          <h4 class="card-title"><%= quote.user.first_name %> <%= quote.user.last_name %></h4>
          <p class="card-text">
            <%= quote.text %><br />
            <strong>Philosopher:</strong> <%= quote.philosopher.first_name %> <%= quote.philosopher.last_name %><br />
            <strong>Publication Year:</strong> <%= quote.publication_year %><br />
            [<a href="<%= quote_path(quote) %>">Read full quote</a>]
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No matching quotes found.</p>
  <% end %>
<% end %>
