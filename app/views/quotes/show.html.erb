<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title">Quote Details</h1>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Quote Content:</strong> <%= @quote.text %></p>
      <p class="card-text"><strong>Philosopher:</strong> <%= @quote.philosopher.first_name %> <%= @quote.philosopher.last_name %></p>
      <p class="card-text"><strong>Publication Year:</strong> <%= @quote.publication_year %></p>
      <p class="card-text"><strong>Comment:</strong> <%= @quote.comment %></p>
      <p class="card-text"><strong>Category:</strong> <%= @quote.categories.map(&:category_name).join(", ") %></p>
      <p class="card-text"><strong>Public:</strong> <%= @quote.is_public ? 'Yes' : 'No' %></p>
    </div>
    <div class="card-footer text-right">
      <% if logged_in? && (current_user == @quote.user || current_user.is_admin?) %>
        <%= link_to 'Edit', edit_quote_path(@quote), class: 'btn btn-secondary' %>
      <% end %>
      <%= link_to 'Back', quotes_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
